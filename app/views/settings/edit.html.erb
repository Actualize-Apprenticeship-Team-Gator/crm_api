<%= form_tag "/settings", method: :patch do  %>
  <div class="form-group row">
    <%= label_tag :body, "Auto Text Message", {class: 'col-sm-2'} %>
    <div class="col-sm-10">
      <%= text_area_tag :body, @auto_text, {class: "form-control form-control-warning"} %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= submit_tag "Save", {class: "form-control btn btn-info"} %>
    </div>
  </div>
<% end %>